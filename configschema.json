{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "activeSeconds": {
            "type": "integer",
            "default": 30
        },
        "listMaximum": {
            "type": "integer",
            "default": 50
        },
        "twitter": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "targetWords": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "consumerKey": {
                    "type": "string",
                    "default": "Twitter API v2 consumer key"
                },
                "consumerSecret": {
                    "type": "string",
                    "default": "Twitter API v2 consumer secret"
                }
			},
			"required": [
				"targetWords",
				"consumerKey",
				"consumerSecret"
			]
		},
		"findOption": {
			"type": "object",
			"additionalProperties": false,
			"properties": {
				"removeRetweet": {
					"type": "boolean",
					"default": false
				}
			}
		}
	},
	"required": [
		"twitter"
	]
}
